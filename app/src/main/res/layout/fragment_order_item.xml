<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/my_order_llyt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="82dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/icon_noapply" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:gravity="center_horizontal"
            android:text="您还没有申请"
            android:textColor="#3A3631"
            android:textSize="17.5sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:text="马上去创建申请吧"
            android:textColor="#999999"
            android:textSize="13.5sp" />

        <Button
            android:id="@+id/my_order_apply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="18dp"
            android:background="@drawable/btn_style"
            android:paddingLeft="52dp"
            android:paddingRight="52dp"
            android:text="去申请"
            android:textColor="#06B7A3"
            android:textSize="17.5sp" />
    </LinearLayout>

    <com.chanven.lib.cptr.PtrClassicFrameLayout
        xmlns:cube_ptr="http://schemas.android.com/apk/res-auto"
        android:id="@+id/my_order_ptr"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_color"
        cube_ptr:ptr_duration_to_close="1000"
        cube_ptr:ptr_duration_to_close_header="200"
        cube_ptr:ptr_keep_header_when_refresh="true"
        cube_ptr:ptr_pull_to_fresh="false"
        cube_ptr:ptr_ratio_of_header_height_to_refresh="1.2"
        cube_ptr:ptr_resistance="1.7"
        android:visibility="gone"
        >

        <android.support.v7.widget.RecyclerView
            android:id="@+id/my_order_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
             />
    </com.chanven.lib.cptr.PtrClassicFrameLayout>


</FrameLayout>

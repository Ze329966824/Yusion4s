<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/login_logo"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="65dp"
        android:src="@mipmap/login_logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="予见汽车"
        android:textColor="#222a36"
        android:textSize="23dp" />

    <RelativeLayout
        android:id="@+id/login_close_btn"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:onClick="onClick"
        android:padding="15dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@mipmap/close_icon" />
    </RelativeLayout>

    <EditText
        android:id="@+id/login_account_edt"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="52dp"
        android:background="@null"
        android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
        android:hint="请输入账号"
        android:inputType="text"
        android:maxLength="11"
        android:paddingLeft="5dp"
        android:textColor="#222a36"
        android:textColorHint="@color/textHintColor"
        android:textSize="15sp" />

    <include layout="@layout/include_line_both" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/login_password_edt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ/*-+.“”：；{}【】"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:paddingBottom="15dp"
            android:paddingLeft="5dp"
            android:paddingRight="15dp"
            android:paddingTop="15dp"
            android:textColor="#222a36"
            android:textColorHint="@color/textHintColor"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/login_password_eye_img"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:scaleType="center"
            android:src="@mipmap/password_hide" />
    </LinearLayout>

    <include layout="@layout/include_line_both" />

    <Button
        android:id="@+id/login_submit_btn"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/submit_button"
        android:onClick="onClick"
        android:text="登录"
        android:textColor="#FFF"
        android:textSize="19sp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:src="@mipmap/login_tangent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="社交账号登录"
            android:textSize="15dp" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn_wx"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:onClick="onClick"
            android:src="@mipmap/login_wx"
            android:text="微信登录" />

    </LinearLayout>


</LinearLayout>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical"
    tools:context="com.yusion.shanghai.yusion4s.ui.ApplyFinancingFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="#FF2D2F3B"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/apply_financing_dlr_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="贵阳通源丰田汽车销售服务有限公司"
            android:textColor="#FF787980"
            android:textSize="12.5dp" />

        <ImageView
            android:id="@+id/apply_financing_triangle_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/apply_financing_triangle" />
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="40dp"
        android:gravity="bottom">

        <Button
            android:id="@+id/apply_financing_cteate_btn"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="#FF06B7A3"
            android:text="创建订单"
            android:textColor="#FFFFFF"
            android:textSize="18dp" />
    </LinearLayout>
</LinearLayout>
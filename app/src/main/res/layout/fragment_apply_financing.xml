<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical"
    tools:context="com.yusion.shanghai.yusion4s.ui.ApplyFinancingFragment">

    <com.chanven.lib.cptr.PtrClassicFrameLayout xmlns:cube_ptr="http://schemas.android.com/apk/res-auto"
        android:id="@+id/dlr_num_ptr"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_color"
        android:visibility="visible"
        cube_ptr:ptr_duration_to_close="1000"
        cube_ptr:ptr_duration_to_close_header="200"
        cube_ptr:ptr_keep_header_when_refresh="true"
        cube_ptr:ptr_pull_to_fresh="false"
        cube_ptr:ptr_ratio_of_header_height_to_refresh="1.2"
        cube_ptr:ptr_resistance="1.7">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="@color/bg_color"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="#FF2D2F3B"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/apply_financing_dlr_lin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/apply_financing_dlr_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="5dp"
                    android:text=""
                    android:textColor="#FF787980"
                    android:textSize="12.5dp" />

                <ImageView
                    android:id="@+id/apply_financing_triangle_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/apply_financing_triangle" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="235dp"
            android:background="@mipmap/apply_financing_back1"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <TextView
                android:id="@+id/all_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:gravity="center_horizontal"
                android:textColor="#FFA0B4B1"
                android:textSize="58dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="center_horizontal"
                android:text="累积完成(单)"
                android:textColor="#FF9FB3B1"
                android:textSize="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/today_count"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        tools:text="11"
                        android:textColor="#19736F"
                        android:textSize="34dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="今日已申请(单)"
                        android:textColor="#FF787980"
                        android:textSize="13dp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/dealing_count"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="#19736F"
                        android:textSize="34dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="进行中(单)"
                        android:textColor="#FF787980"
                        android:textSize="13dp" />

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">


            <LinearLayout
                android:id="@+id/apply_financing_lin1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:background="@mipmap/apply_financing_back2"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/apply_financing_tv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="8dp"
                        android:text="审核拒绝"
                        android:textColor="#FF9FB2B9"
                        android:textSize="13.46dp" />

                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/reject_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/apply_financing_tv1"
                        android:src="@mipmap/apply_financing_icon" />
                </RelativeLayout>

                <TextView
                    android:layout_marginTop="5dp"
                    android:id="@+id/reject_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    tools:text="8"
                    android:textColor="#FF5A6982"
                    android:textSize="30.77sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/apply_financing_lin2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@mipmap/apply_financing_back3"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/apply_financing_tv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="8dp"
                        android:text="待确认金融方案"
                        android:textColor="#FF9FB2B9"
                        android:textSize="13.46dp" />

                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/to_be_confirm_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/apply_financing_tv2"
                        android:src="@mipmap/apply_financing_icon" />
                </RelativeLayout>

                <TextView
                    android:layout_marginTop="5dp"
                    android:id="@+id/to_be_confirm_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="#FF5A6982"
                    android:textSize="30.77dp" />


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">


            <LinearLayout
                android:id="@+id/apply_financing_lin3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@mipmap/apply_financing_back2"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/apply_financing_tv4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="8dp"
                        android:text="放款中"
                        android:textColor="#FF9FB2B9"
                        android:textSize="13.46dp" />

                    <ImageView
                        android:id="@+id/to_loan_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@id/apply_financing_tv4"
                        android:src="@mipmap/apply_financing_icon"
                        android:visibility="gone" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/to_loan_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:textColor="#FF5A6982"
                    android:textSize="30.77dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/apply_financing_lin4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@mipmap/apply_financing_back3"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/apply_financing_tv3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="8dp"
                        android:text="待提贷后资料"
                        android:textColor="#FF9FB2B9"
                        android:textSize="13.46dp" />

                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/to_be_upload_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/apply_financing_tv3"
                        android:src="@mipmap/apply_financing_icon" />
                </RelativeLayout>

                <TextView
                    android:layout_marginTop="5dp"
                    android:id="@+id/to_be_upload_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="#FF5A6982"
                    android:textSize="30.77dp" />


            </LinearLayout>


        </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="14.62dp"
                android:background="#FFFFFFFF"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14.42dp"
                    android:layout_marginRight="14.42dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/apply_financing_cteate_newcar_btn"
                        android:layout_width="0dp"
                        android:layout_height="42dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="#FF06B7A3"
                        android:text="新车"
                        android:textColor="#FFFFFF"
                        android:textSize="18dp" />

                    <Button
                        android:id="@+id/apply_financing_cteate_oldcar_btn"
                        android:layout_width="0dp"
                        android:layout_height="42dp"
                        android:layout_weight="1"
                        android:background="#FFFF8867"
                        android:text="二手车"
                        android:textColor="#FFFFFF"
                        android:textSize="18dp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="bottom" />


            </LinearLayout>

        </LinearLayout>
    </ScrollView>
    </com.chanven.lib.cptr.PtrClassicFrameLayout>
</LinearLayout>
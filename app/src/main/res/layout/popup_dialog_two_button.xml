<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="259dp"
        android:orientation="vertical"
        android:layout_height="141dp">

        <TextView
            android:id="@+id/popup_dialog_msg"
            android:layout_width="match_parent"
            android:layout_height="99.04dp"
            android:gravity="center"
            android:text="是否退出？"
            android:textColor="#FF222A36"
            android:textSize="17dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FF06B7A3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/popup_dialog_ok"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="是"
                android:textSize="17dp"
                android:textColor="#FF06B7A3" />

            <TextView
                android:id="@+id/popup_dialog_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#FF06B7A3"
                android:gravity="center"
                android:textSize="17dp"
                android:text="否"
                android:textColor="#FFFFFFFF" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
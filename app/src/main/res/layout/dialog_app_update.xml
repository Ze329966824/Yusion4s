<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/x778"
        android:layout_height="@dimen/y979"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/y418"
            android:background="@null"
            android:src="@mipmap/dialog_update_back" />

        <LinearLayout
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y435"
            android:orientation="vertical">

            <TextView
                android:layout_marginLeft="@dimen/x55"

                android:layout_marginTop="@dimen/y40"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新版本升级"
                android:textColor="#FF222A36"
                android:textSize="@dimen/y52" />


            <ScrollView
                android:layout_marginLeft="@dimen/x55"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y40">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:lineSpacingExtra="@dimen/y10"
                        android:textSize="@dimen/y35"
                        android:id="@+id/update_content"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="1. 新版本内容的更新点\n2.新版本内容的更新点新版本内容\n3.新版本内容的更新点\n4.新版本内容的更" />
                </LinearLayout>
            </ScrollView>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y128"
            android:background="#ffffff"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/update_close"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#FFE1E3E6"
                android:gravity="center"
                android:text="残忍拒绝"
                android:textColor="#FF999999"
                android:textSize="@dimen/y43" />

            <TextView
                android:id="@+id/update_ok"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#FFFFC723"
                android:gravity="center"
                android:text="极速升级"
                android:textColor="#FFFFFFFF"
                android:textSize="@dimen/y43" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>
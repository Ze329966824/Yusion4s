<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical"
    tools:context="com.yusion.shanghai.yusion4s.ui.HomeFragment">

    <com.chanven.lib.cptr.PtrClassicFrameLayout xmlns:cube_ptr="http://schemas.android.com/apk/res-auto"
        android:id="@+id/dlr_num_ptr"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_color"
        android:visibility="visible"
        cube_ptr:ptr_duration_to_close="1000"
        cube_ptr:ptr_duration_to_close_header="200"
        cube_ptr:ptr_keep_header_when_refresh="true"
        cube_ptr:ptr_pull_to_fresh="false"
        cube_ptr:ptr_ratio_of_header_height_to_refresh="1.2"
        cube_ptr:ptr_resistance="1.7">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_color"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/apply_financing_dlr_lin"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y127"
                android:background="#FF2D2F3B"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/apply_financing_dlr_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="5dp"
                        android:textColor="#FF787980"
                        android:textSize="@dimen/y37"
                        tools:text="测试经销商" />

                    <ImageView
                        android:id="@+id/apply_financing_triangle_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/apply_financing_triangle" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y662"
                android:background="@mipmap/apply_financing_back"
                android:gravity="center_horizontal"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/all_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/y109"
                    android:gravity="center_horizontal"
                    android:textColor="#FFA0B4B1"
                    android:textSize="@dimen/y172"
                    tools:text="1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/y6"
                    android:gravity="center_horizontal"
                    android:text="累积完成(单)"
                    android:textColor="#FF9FB3B1"
                    android:textSize="@dimen/y46" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/today_count"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="#19736F"
                            android:textSize="@dimen/y104"
                            tools:text="11" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="今日已申请(单)"
                            android:textColor="#FF787980"
                            android:textSize="@dimen/y40" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/dealing_count"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="#19736F"
                            android:textSize="@dimen/y104" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="进行中(单)"
                            android:textColor="#FF787980"
                            android:textSize="@dimen/y40" />

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/y29"
                android:orientation="horizontal">


                <LinearLayout
                    android:id="@+id/apply_financing_lin1"
                    android:layout_width="@dimen/x513"
                    android:layout_height="@dimen/y317"

                    android:background="@mipmap/apply_financing_back2"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/y49"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/apply_financing_tv1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginRight="@dimen/y26"
                            android:text="放款审核"
                            android:textColor="#FF9FB2B9"
                            android:textSize="@dimen/y40" />

                        <ImageView
                            android:id="@+id/reject_img"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@id/apply_financing_tv1"
                            android:src="@mipmap/apply_financing_icon"
                            android:visibility="gone" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/reject_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:textColor="#FF5A6982"
                        android:textSize="@dimen/y92"
                        tools:text="8" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/apply_financing_lin2"
                    android:layout_width="@dimen/x513"
                    android:layout_height="@dimen/y317"
                    android:background="@mipmap/apply_financing_back3"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/y49"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/apply_financing_tv2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginRight="@dimen/y26"
                            android:text="放款"
                            android:textColor="#FF9FB2B9"
                            android:textSize="@dimen/y40" />

                        <ImageView
                            android:id="@+id/to_be_confirm_img"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@id/apply_financing_tv2"
                            android:src="@mipmap/apply_financing_icon"
                            android:visibility="gone" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/to_be_confirm_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:textColor="#FF5A6982"
                        android:textSize="@dimen/y92" />


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">


                <LinearLayout
                    android:id="@+id/apply_financing_lin3"
                    android:layout_width="@dimen/x513"
                    android:layout_height="@dimen/y317"
                    android:background="@mipmap/apply_financing_back2"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/y49"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/apply_financing_tv4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginRight="@dimen/y26"
                            android:text="贷后追踪"
                            android:textColor="#FF9FB2B9"
                            android:textSize="@dimen/y40" />

                        <ImageView
                            android:id="@+id/to_loan_img"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="5dp"
                            android:layout_toRightOf="@id/apply_financing_tv4"
                            android:src="@mipmap/apply_financing_icon"
                            android:visibility="gone" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/to_loan_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:textColor="#FF5A6982"
                        android:textSize="@dimen/y92" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/apply_financing_lin4"
                    android:layout_width="@dimen/x513"
                    android:layout_height="@dimen/y317"
                    android:background="@mipmap/apply_financing_back3"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/y49"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/apply_financing_tv3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginRight="@dimen/y26"
                            android:text="已拒绝"
                            android:textColor="#FF9FB2B9"
                            android:textSize="@dimen/y40" />

                        <ImageView
                            android:id="@+id/to_be_upload_img"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@id/apply_financing_tv3"
                            android:src="@mipmap/apply_financing_icon"
                            android:visibility="gone" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/to_be_upload_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:textColor="#FF5A6982"
                        android:textSize="@dimen/y92" />


                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y400"
                android:layout_marginTop="@dimen/y43"
                android:background="#FFFFFFFF"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y126"
                    android:layout_marginLeft="@dimen/y43"
                    android:layout_marginRight="@dimen/y43"
                    android:layout_marginTop="@dimen/y29"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/apply_financing_cteate_newcar_btn"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/y127"
                        android:layout_marginRight="@dimen/y26"
                        android:layout_weight="1"
                        android:background="@drawable/new_car_selector"
                        android:text="新车"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/y46" />

                    <Button
                        android:id="@+id/apply_financing_cteate_oldcar_btn"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/y127"
                        android:layout_weight="1"
                        android:background="@drawable/old_car_selector"
                        android:text="二手车"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/y46" />

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </com.chanven.lib.cptr.PtrClassicFrameLayout>
</LinearLayout>
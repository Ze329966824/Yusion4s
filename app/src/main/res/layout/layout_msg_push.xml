<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        app:contentPadding="5dp"
        app:cardMaxElevation="6dp"
        android:layout_width="@dimen/x1022"
        android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/y60"
        app:cardCornerRadius="10dp"
        android:layout_marginBottom="@dimen/y10"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/y5"
            android:layout_marginBottom="@dimen/y5"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y196"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x43"
                android:layout_marginRight="@dimen/x43"
                android:layout_marginTop="@dimen/y29"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/x58"
                    android:layout_height="@dimen/y58"
                    android:layout_gravity="center"
                    android:src="@mipmap/msg_push_icon" />


                <TextView
                    android:id="@+id/msg_push_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/x20"
                    android:includeFontPadding="false"
                    tools:text="审批拒绝"
                    android:textSize="@dimen/y46" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/msg_push_car_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:includeFontPadding="false"
                    tools:text="新车"
                    android:textColor="#FF06B7A3"
                    android:textSize="@dimen/y37" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x43"
                android:layout_marginRight="@dimen/x43"
                android:layout_marginTop="@dimen/y23"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/msg_push_order_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    tools:text="张小予  90,000.00元   2017 奥迪A3 噼里啪啦噼里啪啦"
                    android:textColor="#FF222A36"
                    android:textSize="@dimen/y43" />
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
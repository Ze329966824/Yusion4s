<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@null"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout

        android:background="#FCF5F7F7"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y196"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x43"
            android:layout_marginRight="@dimen/x43"
            android:layout_marginTop="@dimen/y29"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/x58"
                android:layout_height="@dimen/y58"
                android:layout_gravity="center"
                android:src="@mipmap/msg_push_icon" />

            <TextView
                android:id="@+id/msg_push_st"
                android:includeFontPadding="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/x20"
                android:textSize="@dimen/y46"
                android:text="审批拒绝" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/msg_push_car_type"
                android:includeFontPadding="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#FF06B7A3"
                android:textSize="@dimen/y37"
                android:text="新车" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x43"
            android:layout_marginRight="@dimen/x43"
            android:layout_marginTop="@dimen/y23"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/msg_push_order_message"
                android:text="张小予  90,000.00元   2017 奥迪A3 噼里啪啦噼里啪啦"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FF222A36"
                android:singleLine="true"
                android:textSize="@dimen/y43"
                android:ellipsize="end"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yusion.shanghai.yusion4s.ui.entrance.AppraisalvalueActivity">

    <com.yusion.shanghai.yusion4s.widget.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        android:gravity="bottom"
        android:orientation="vertical">

        <com.shizhefei.view.largeimage.LargeImageView
            android:id="@+id/appraisal_value_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            />

        <TextView
            android:id="@+id/appraisal_download_tv"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/system_color"
            android:gravity="center"
            android:text="下载到本地"
            android:textColor="#FFffff"
            android:textSize="17.31dp" />
    </LinearLayout>
</LinearLayout>

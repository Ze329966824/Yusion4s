<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="259dp"
        android:orientation="vertical"
        android:layout_height="157dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/popup_dialog_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25.96dp"
                android:gravity="center"
                android:text="重新提报订单！"
                android:textColor="#FF222A36"
                android:textSize="@dimen/x46" />

            <TextView
                android:id="@+id/pop_dialog_title_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28.85dp"
                android:layout_marginRight="28.85dp"
                android:layout_marginTop="3.85dp"
                android:gravity="center"
                android:text="是否更换配偶作为主贷人，并重新提报订单？"
                android:textColor="#FF999999"
                android:textSize="13.46dp" />
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#FF06B7A3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/pop_dialog_cancel_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消"
                android:textSize="@dimen/x46"
                android:textColor="#FF06B7A3" />

            <TextView
                android:id="@+id/pop_dialog_ok_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#FF06B7A3"
                android:gravity="center"
                android:textSize="@dimen/x46"
                android:text="重新提报"
                android:textColor="#FFFFFFFF" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
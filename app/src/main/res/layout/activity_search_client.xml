<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <include
        android:id="@+id/title_bar"
        layout="@layout/base_titlebar" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/separate_line_color" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/icon_find" />

        <EditText
            android:id="@+id/et_search"
            android:layout_width="217dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@+id/img_icon"
            android:background="@null"
            android:hint="请输入客户姓名/手机号/身份证号"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="#000000"
            android:textSize="14.5dp" />



        <Button
            android:background="@null"
            android:id="@+id/search_info"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="15dp"
            android:text="搜索"
            android:textColor="#06b7a3"
            android:textSize="14.5dp" />

        <View
            android:layout_toLeftOf="@id/search_info"
            android:layout_width="1dp"
            android:layout_height="17dp"
            android:layout_centerVertical="true"
            android:background="@color/separate_line_color" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/separate_line_color" />

    <LinearLayout
        android:id="@+id/search_warn_lly"
        android:layout_width="314dp"
        android:layout_height="33dp"
        android:layout_gravity="center"
        android:layout_marginTop="7dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:src="@mipmap/search_warn" />

        <TextView
            android:id="@+id/tv_notice"
            android:layout_width="307dp"
            android:layout_height="33dp"
            android:layout_gravity="center"
            android:layout_marginLeft="4dp"
            android:maxLines="2"
            android:text="很抱歉！！没有找到您要搜索的客户，请核对客户姓名/手机
号/身份证号。"

            android:textColor="#ffa400"
            android:textSize="11.5sp" />


    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_client_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="11dp"
        android:visibility="gone" />


</LinearLayout>

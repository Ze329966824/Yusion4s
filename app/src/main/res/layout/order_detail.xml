<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <include
        android:id="@+id/title_bar"
        layout="@layout/base_titlebar" />


    <LinearLayout
        android:id="@+id/lln"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_bar"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:visibility="gone">

        <!--审核中-->
        <RelativeLayout
            android:id="@+id/order_detail_status_wait_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:id="@+id/order_detail_status_wait"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="征信审核中"
                android:textColor="@color/text_normal"
                android:textSize="13.5sp" />

            <View
                android:id="@+id/order_detail_status_wait_line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@id/order_detail_status_wait"
                android:background="@color/main_driver" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/order_detail_status_wait_line"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:src="@mipmap/order_detail_audit" />

                <TextView
                    android:id="@+id/order_detail_status_wait_reason"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:text="征信审核中备注……"
                    android:textColor="#FFA400"
                    android:textSize="13.5sp" />
            </LinearLayout>
        </RelativeLayout>

        <!--审核通过-->
        <RelativeLayout
            android:id="@+id/order_detail_status_pass_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:id="@+id/order_detail_status_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="征信通过"
                android:textColor="@color/text_normal"
                android:textSize="13.5sp" />

            <View
                android:id="@+id/order_detail_status_pass_line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@id/order_detail_status_pass"
                android:background="@color/main_driver" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/order_detail_status_pass_line"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:src="@mipmap/order_detail_pass" />

                <TextView
                    android:id="@+id/order_detail_status_pass_reason"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:text="征信通过备注……"
                    android:textColor="#06B7A3"
                    android:textSize="13.5sp" />
            </LinearLayout>
        </RelativeLayout>

        <!--审核拒绝-->
        <RelativeLayout
            android:id="@+id/order_detail_status_reject_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:id="@+id/order_detail_status_reject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="征信审核拒绝"
                android:textColor="@color/text_normal"
                android:textSize="13.5sp" />

            <View
                android:id="@+id/order_detail_status_reject_line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@id/order_detail_status_reject"
                android:background="@color/main_driver" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/order_detail_status_reject_line"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:src="@mipmap/icon_rejected" />

                <TextView
                    android:id="@+id/order_detail_status_reject_reason"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/order_detail_status_reject_line"
                    android:padding="15dp"
                    android:text="征信拒绝备注……"
                    android:textColor="#FF3F00"
                    android:textSize="13.5sp" />
            </LinearLayout>
        </RelativeLayout>

        <!--取消-->
        <RelativeLayout
            android:id="@+id/order_detail_status_cancel_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:visibility="gone"
            tools:visibility="gone">

            <TextView
                android:id="@+id/order_detail_status_cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="已取消"
                android:textColor="@color/text_normal"
                android:textSize="13.5sp" />

            <View
                android:id="@+id/order_detail_status_cancel_line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@id/order_detail_status_cancel"
                android:background="@color/main_driver" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/order_detail_status_cancel_line"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:src="@mipmap/order_detail_cancel" />

                <TextView
                    android:id="@+id/order_detail_status_cancel_reason"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/order_detail_status_cancel_line"
                    android:padding="15dp"
                    android:text="取消备注……"
                    android:textColor="#999999"
                    android:textSize="13.5sp" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>


    <!--复用-->
    <LinearLayout
        android:id="@+id/title_lin"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:layout_below="@id/title_bar"
        android:layout_marginTop="10dp"

        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/title_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="拒绝"
                android:textColor="#FF222A36"
                android:textSize="17dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/remark_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="备注："
                android:textSize="12dp" />

            <TextView
                tools:text="我是一只小白兔我是一只小白兔我是一只小白兔我是一只小白兔我是一只小白兔我是一只小白兔我是一只小白兔我是一只小白兔我是一只小白兔我是一只小"
                android:ellipsize="end"
                android:id="@+id/remark_tv2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:maxLines="2"
                android:textSize="12dp" />

        </LinearLayout>

    </LinearLayout>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title_lin">

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/scrollView_four"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lln">

            <include layout="@layout/main_order_detail" />
        </android.support.v4.widget.NestedScrollView>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="60dp"
            android:layout_marginRight="15dp"
            android:scaleType="center"
            android:src="@mipmap/to_top"
            app:backgroundTint="@color/transparent"
            app:borderWidth="0dp"
            app:elevation="0dp"
            app:layout_anchor="@id/scrollView_four"
            app:layout_anchorGravity="bottom|right|end"
            app:layout_behavior="com.yusion.shanghai.yusion4s.widget.behavior.CustomBehavior"
            app:rippleColor="@color/transparent" />
    </android.support.design.widget.CoordinatorLayout>


    <LinearLayout
        android:id="@+id/order_detail_sign_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:elevation="2dp"
        android:orientation="horizontal"
        android:visibility="visible">

        <Button
            android:id="@+id/order_detail_sign"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/submit_button"
            android:gravity="center"
            android:text="提交资料"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <Button
            android:id="@+id/order_detail_look"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/btn_order_sign"
            android:gravity="center"
            android:text="查看合同"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/order_detail_cancle"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/btn_order_cancle"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/text_light_grey"
            android:textSize="16sp"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/order_detail_change_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:elevation="2dp"
        android:orientation="horizontal"
        android:visibility="gone">


        <TextView
            android:id="@+id/order_detail_change_tv"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="修改资料"
            android:textColor="#FF06B7A3" />

        <TextView
            android:id="@+id/order_detail_upload_tv"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"

            android:background="#FF06B7A3"
            android:gravity="center"
            android:text="提交资料"
            android:textColor="#FFFFFFFF" />


    </LinearLayout>

</RelativeLayout>

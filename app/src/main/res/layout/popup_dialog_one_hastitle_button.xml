<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#ffffff"
android:orientation="vertical">

<LinearLayout
    android:layout_width="259dp"
    android:layout_height="157dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/popup_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25.96dp"
            android:gravity="center"
            android:text="客户信息未完善！"
            android:textColor="#FF222A36"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/popup_dialog_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28.85dp"
            android:layout_marginRight="28.85dp"
            android:layout_marginTop="3.85dp"
            android:gravity="center"
            android:text="客户个人信息尚未完善，请引导客户登录用户端补全信息"
            android:textColor="#FF999999"
            android:textSize="13.46dp" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:orientation="horizontal">



        <TextView
            android:id="@+id/popup_dialog_ok"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FF06B7A3"
            android:gravity="center"
            android:text="好的"
            android:textColor="#FFFFFFFF"
            android:textSize="17dp" />
    </LinearLayout>
</LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="368dp"
        android:layout_height="1dp"
        android:background="@color/separate_line_color"
        app:layout_constraintBottom_toTopOf="@+id/flow_diagram"
        app:layout_constraintLeft_toLeftOf="parent" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/flow_diagram"
        android:layout_width="0dp"
        android:layout_height="86dp"
        android:background="@color/white"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/step1"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_marginEnd="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/apply_step_style_1"
            android:gravity="center"
            android:text="@string/number_1"
            android:textColor="@color/white"
            app:layout_constraintRight_toLeftOf="@+id/step_separate_line"
            app:layout_constraintTop_toTopOf="parent" />


        <View
            android:id="@+id/step_separate_line"
            android:layout_width="140dp"
            android:layout_height="2dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/step_gradient_line_style2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/step1" />

        <TextView
            android:id="@+id/step2"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_marginLeft="1dp"
            android:layout_marginStart="1dp"
            android:background="@drawable/apply_step_style_2"
            android:gravity="center"
            android:text="@string/all_right"
            android:textColor="@color/white"
            app:layout_constraintLeft_toRightOf="@+id/step_separate_line"
            app:layout_constraintTop_toTopOf="@+id/step1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="车辆信息"
            android:textColor="@color/apply_step_style_1_color"
            android:textSize="11.5sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/step1"
            app:layout_constraintRight_toRightOf="@+id/step1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="征信信息"
            android:textColor="@color/apply_step_style_2_color"
            android:textSize="11.5sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/step2"
            app:layout_constraintRight_toRightOf="@+id/step2" />
    </android.support.constraint.ConstraintLayout>

    <View
        android:layout_width="368dp"
        android:layout_height="1dp"
        android:background="@color/separate_line_color"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/flow_diagram" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="1dp"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/flow_diagram"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="332dp"
                android:layout_height="42dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/textview_border"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="9dp"
                    android:src="@mipmap/icon_find" />

                <TextView
                    android:id="@+id/tv_find"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:gravity="center_vertical"
                    android:text="请输入客户姓名/手机号/身份证号"
                    android:textColor="#D1D1D1"
                    android:textSize="14.5sp"
                    android:visibility="visible" />
            </LinearLayout>


            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                tools:visibility="visible">

                <View
                    android:layout_width="3dp"
                    android:layout_height="11dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginStart="15dp"
                    android:background="@drawable/fill_vertical_line"
                    app:layout_constraintBottom_toBottomOf="@+id/personal_info1"
                    app:layout_constraintLeft_toLeftOf="parent" />

                <TextView
                    android:id="@+id/personal_info1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginStart="22dp"
                    android:text="申请人征信信息"
                    android:textColor="#666666"
                    android:textSize="11.5sp"
                    app:layout_constraintBottom_toTopOf="@+id/personal_info_group"
                    app:layout_constraintLeft_toLeftOf="parent" />

                <LinearLayout
                    android:id="@+id/personal_info_group"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="38dp"
                    android:background="@color/bg_color"
                    android:orientation="vertical"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/separate_line_height"
                        android:background="@color/separate_line_color" />

                    <LinearLayout style="@style/apply_info_item">

                        <TextView
                            style="@style/apply_info_title"
                            android:text="身份证号" />

                        <EditText
                            android:id="@+id/credit_info_id_tv"
                            style="@style/apply_info_content_type_id"
                            android:enabled="false"
                            android:hint="请输入18位身份证号" />

                        <FrameLayout
                            android:layout_width="20dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="15dp">

                            <ImageView
                                android:id="@+id/credit_info_id_ocr_img"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left|center"
                                android:src="@mipmap/camera"
                                android:visibility="gone" />
                        </FrameLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/separate_line_height"
                        android:background="@color/separate_line_color" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="10dp"
                        android:background="@mipmap/sqs_bg"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:text="征信查询授权书拍照"
                            android:textColor="#222a36"
                            android:textSize="13.5sp" />

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_marginBottom="28dp"
                            android:layout_marginTop="18dp"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/credit_info_sqs1_img"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:src="@mipmap/sqs" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:src="@mipmap/alphy_camera" />
                        </FrameLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/separate_line_height"
                        android:background="@color/separate_line_color" />

                    <LinearLayout
                        android:id="@+id/credit_info_sqs2_expand_lin"
                        style="@style/apply_info_item">

                        <TextView
                            style="@style/apply_info_title"
                            android:layout_width="wrap_content"
                            android:text="添加配偶征信信息" />

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />

                        <ImageView
                            android:id="@+id/credit_info_sqs2_expand_img"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:src="@mipmap/expand_sub" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/separate_line_height"
                        android:background="@color/separate_line_color" />

                    <LinearLayout
                        android:id="@+id/credit_info_sqs2_lin"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="10dp"
                        android:background="@mipmap/sqs_bg"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:text="征信查询授权书拍照"
                            android:textColor="#222a36"
                            android:textSize="13.5sp" />

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_marginBottom="28dp"
                            android:layout_marginTop="18dp"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/credit_info_sqs2_img"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:src="@mipmap/sqs" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:src="@mipmap/alphy_camera" />
                        </FrameLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/separate_line_height"
                        android:background="@color/separate_line_color" />

                    <LinearLayout
                        android:id="@+id/credit_info_sqs3_expand_lin"
                        style="@style/apply_info_item">

                        <TextView
                            style="@style/apply_info_title"
                            android:layout_width="wrap_content"
                            android:text="添加担保人征信信息" />

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />

                        <ImageView
                            android:id="@+id/credit_info_sqs3_expand_img"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:src="@mipmap/expand_sub" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/separate_line_height"
                        android:background="@color/separate_line_color" />

                    <LinearLayout
                        android:id="@+id/credit_info_sqs3_lin"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="10dp"
                        android:background="@mipmap/sqs_bg"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:text="征信查询授权书拍照"
                            android:textColor="#222a36"
                            android:textSize="13.5sp" />

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_marginBottom="28dp"
                            android:layout_marginTop="18dp"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/credit_info_sqs3_img"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:src="@mipmap/sqs" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:src="@mipmap/alphy_camera" />
                        </FrameLayout>

                    </LinearLayout>

                </LinearLayout>
            </android.support.constraint.ConstraintLayout>

            <Button
                android:id="@+id/credit_info_submit_btn"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginBottom="20dp"
                android:layout_marginEnd="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="35dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/submit_button"
                android:enabled="false"
                android:gravity="center"
                android:text="申请"
                android:textColor="@color/white"
                android:textSize="17sp" />
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
